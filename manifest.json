{
  "manifest_version": 2,
  "name": "Neo Companion",
  "description": "A companion browser extension for the Neo language",
  "version": "2020.0.0",
  "icons": { "128": "images/icon_128.png" },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    "assets/config.json"
  ],
  "background": {
    "scripts": ["node_modules/crx-hotreload/hot-reload.js"]
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}